#!/usr/bin/env bash

interpret=true
compile=false

if [ "$1" == "--compile" ]; then
    compile=true
    interpret=false
    shift
elif [ "$1" == "--both" ]; then
    compile=true
    shift
fi

if [ "$1" == "" ]
then
    shaders="red_green func_test creation define wavy dans_drews_poster lk wetrock flirt"
else
    shaders="$*"
fi

echo 
for shader in $shaders
do
    echo "============================================== $shader"
    if [ "$interpret" = true ]; then
        ./shade --term -f 90 90 shaders/$shader.frag
        mv image0090.ppm $shader-interpret.ppm
    fi
    if [ "$compile" = true ]; then
        ./shade -c -O -o x.s shaders/$shader.frag > /dev/null && \
            ./as -v x.s > x.lst && \
            ./emu -j 1 --subst -f 90 --term x.o && \
            mv emulated.ppm $shader-compile.ppm
    fi
done

