#!/usr/bin/env bash

if [ a$1 == "a--term" ]
then
    display=true
    shift
else
    display=false
fi

echo 
for i in creation # wetrock creation define flirt lk wavy
do
    echo $i
    shade -f 90 90 shaders/$i.frag
    mv image0090.ppm $i.ppm
    echo $i.ppm
    if [ $display = true ] ; then imgcat $i.ppm ; fi
    echo
done

