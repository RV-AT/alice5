#!/usr/bin/env bash

if [ "$1" == "--compile" ]
then
    compile=true
    shift
else
    compile=false
fi

if [ "$1" == "" ]
then
    shaders="creation define lk wavy wetrock flirt"
else
    shaders="$1"
fi

echo 
for i in $shaders
do
    echo "============================================== $i"
    if [ $compile = true ]; then
        ./shade -c -s -O shaders/$i.frag > x.s && \
            ./as x.s && \
            ./gpuemu -f 90 --term x.o
    else
        ./shade --term -f 90 90 shaders/$i.frag
        mv image0090.ppm $i.ppm
    fi
done

